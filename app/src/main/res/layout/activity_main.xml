<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <test.com.assign_1.AutoFitEditText
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rET"
            android:background="#72B0D8"
            android:focusable="true"
            android:autoSizeMaxTextSize="80sp"
            android:autoSizeMinTextSize="16sp"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Type Here"
            android:isScrollContainer="false"
            android:inputType="textMultiLine|textNoSuggestions"
            android:maxLength="240"
            android:textColor="#000000"
            android:textSize="80sp"/>
    </FrameLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:orientation="horizontal">
        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@color/btn1"
            android:id="@+id/btn1"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@color/btn2"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@color/btn3"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@color/btn4"
            android:id="@+id/btn4"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@color/btn5"
            android:id="@+id/btn5"/>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>

</RelativeLayout>